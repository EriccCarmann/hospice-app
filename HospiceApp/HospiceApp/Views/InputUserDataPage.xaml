<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:HospiceApp.ViewModels"
             xmlns:views="clr-namespace:HospiceApp.Views"
             x:DataType="viewmodel:InputUserDataViewModel"
             x:Class="HospiceApp.Views.InputUserDataPage">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Grid x:Name="MultiStepGrid" RowDefinitions="Auto,Auto,Auto">
                <views:PatientDemographicsView
                    Grid.Row="0"
                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:InputUserDataViewModel}}, Path=IsDemographicsVisible, FallbackValue=True}"/>
                <views:HealthIssuesView
                    Grid.Row="1"
                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:InputUserDataViewModel}}, Path=IsHealthIssuesVisible, FallbackValue=False}"/>
                <Button
                    Grid.Row="2"
                    Text="Next"
                    Command="{Binding NextViewCommand}"
                />
            </Grid>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>