<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:HospiceApp.Models"
             xmlns:viewmodel="clr-namespace:HospiceApp.ViewModels"
             xmlns:controls="http://zoft.MauiExtensions/Controls"
             x:DataType="viewmodel:SearchDiseasesViewModel"
             x:Class="HospiceApp.Views.SearchDiseasesPage">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*,Auto" Padding="10">
                <!-- <Entry Grid.Column="0" -->
                <!--        Text="{Binding Name}" -->
                <!--        Placeholder="Enter name" /> -->
                
                <controls:AutoCompleteEntry Placeholder="Search for a country or group"
                                            ItemsSource="{Binding FilteredList}"
                                            TextMemberPath="Country"
                                            DisplayMemberPath="Country"
                                            TextChangedCommand="{Binding TextChangedCommand}"
                                            CursorPosition="{Binding CursorPosition, Mode=TwoWay}"
                                            SelectedSuggestion="{Binding SelectedItem}"
                                            ClearButtonVisibility="Never"
                                            HeightRequest="50"/>
                
                
                <!-- <controls:AutoCompleteEntry -->
                <!--     Grid.Column="0" -->
                <!--     Text="{Binding Name, Mode=TwoWay}"    -->
                <!--     Placeholder="Search diseasesâ€¦" -->
                <!--     ItemsSource="{Binding FilteredList}" -->
                <!--     TextChangedCommand="{Binding TextChangedCommand}" -->
                <!--     SelectedSuggestion="{Binding SelectedItem}" -->
                <!--     CursorPosition="{Binding CursorPosition, Mode=TwoWay}" -->
                <!--     ClearButtonVisibility="WhileEditing" -->
                <!--     HeightRequest="50"/> -->
                <Button Grid.Column="1"
                        Text="Search"
                        Command="{Binding SearchCommand}" />
            </Grid>
            <CollectionView  
                    ItemsSource="{Binding Diseases}"  
                    EmptyView="No diseases to display."  
                    SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Disease">
                            <toolkit:Expander>
                                <toolkit:Expander.Header>
                                    <Grid Padding="10" ColumnDefinitions="*,Auto">
                                        <Label  
                                            Text="{Binding Name}"  
                                            FontAttributes="Bold"  
                                            FontSize="18"  
                                            VerticalOptions="Center" />
                                        <Label  
                                            Grid.Column="1"  
                                            Text="{Binding ICDCode}"  
                                            FontSize="14"  
                                            VerticalOptions="Center"
                                            TextColor="Gray"/>
                                    </Grid>
                                </toolkit:Expander.Header>
                                <toolkit:Expander.Content>
                                    <VerticalStackLayout  
                                        Padding="10"  
                                        Spacing="8">
                                        <Label  
                                            Text="{Binding Description}"  
                                            FontSize="14"  
                                            LineBreakMode="WordWrap" />

                                        <HorizontalStackLayout  
                                            Spacing="5"  
                                            VerticalOptions="Center">
                                            <Label  
                                                Text="Hospice eligible:"  
                                                FontAttributes="Italic"  
                                                VerticalOptions="Center"/>
                                            <Switch  
                                                IsToggled="{Binding IsHospiceEligible}"  
                                                IsEnabled="False"  
                                                VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </toolkit:Expander.Content>
                            </toolkit:Expander>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>