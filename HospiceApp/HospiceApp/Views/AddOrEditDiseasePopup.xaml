<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="HospiceApp.Views.AddOrEditDiseasePopup"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Size="300,400">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Name" Text="{Binding Name}" />
        <Entry Placeholder="ICD Code" Text="{Binding ICDCode}" />
        <Editor Placeholder="Description" Text="{Binding Description}" HeightRequest="100" />
        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Label Text="Hospice Eligible" VerticalOptions="Center" />
            <Switch IsToggled="{Binding IsHospiceEligible}" />
        </StackLayout>
        <Button Text="Save" Command="{Binding SaveCommand}" />
        <Button Text="Cancel" Command="{Binding CancelCommand}" />
    </VerticalStackLayout>
</toolkit:Popup>